{
  "name": "@splytech-io/request-validation",
  "version": "0.2.0",
  "description": "Request Validation",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "pretest": "rm -rf *.js *.map *.d.ts",
    "test": "nyc mocha --require ts-node/register 'src/**/*.spec.ts'",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "build": "tsc",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "request",
    "validation"
  ],
  "author": "Andrius Skerla",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/joi": "^13.0.7",
    "joi": "^13.1.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.3.0",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.1",
    "sinon": "^5.0.10",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.9.1"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ]
  },
  "directories": {
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/splytech-io/node-request-validation.git"
  },
  "bugs": {
    "url": "https://github.com/splytech-io/node-request-validation/issues"
  },
  "homepage": "https://github.com/splytech-io/node-request-validation#readme"
}
